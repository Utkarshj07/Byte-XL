<body>
  <div class="bank-box">
    <h2>My Account</h2>
    <div class="balance" id="balance">
      Current Balance: ₹11,000
    </div>
    <div class="amount-section">
      <label for="amount">Amount</label>
      <input type="number" id="amount" placeholder="Enter amount in ₹" min="1" required>
    </div>
    <div class="action-buttons">
      <button id="depositBtn">Deposit</button>
      <button id="withdrawBtn">Withdraw</button>
    </div>
  </div>
  <script>
    let balance = 10000;

    function updateBalance() {
      document.getElementById("balance").textContent = "Current Balance: ₹" + balance.toLocaleString();
    }

    document.getElementById("depositBtn").onclick = function() {
      const amt = Number(document.getElementById("amount").value);
      if (amt > 0) {
        balance += amt;
        updateBalance();
        document.getElementById("amount").value = "";
      } else {
        alert("Enter a valid amount");
      }
    };

    document.getElementById("withdrawBtn").onclick = function() {
      const amt = Number(document.getElementById("amount").value);
      if (amt > 0 && amt <= balance) {
        balance -= amt;
        updateBalance();
        document.getElementById("amount").value = "";
      } else if (amt > balance) {
        alert("Insufficient balance!");
      } else {
        alert("Enter a valid amount");
      }
    };
  </script>
</body>
